@model BeFit_Kaszkowiak.Models.Sesja

@{
    ViewData["Title"] = "Dodaj sesję";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Tytul" class="form-label"></label>
        <input asp-for="Tytul" class="form-control" />
        <span asp-validation-for="Tytul" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DataRozpoczecia" class="form-label"></label>
        <input asp-for="DataRozpoczecia" type="datetime-local" class="form-control" />
        <span asp-validation-for="DataRozpoczecia" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DataZakonczenia" class="form-label"></label>
        <input asp-for="DataZakonczenia" type="datetime-local" class="form-control" />
        <span asp-validation-for="DataZakonczenia" class="text-danger"></span>
        <div class="form-text">Pozostaw puste, jeżeli sesja jeszcze się nie zakończyła.</div>
    </div>

    <div class="mb-3">
        <label asp-for="Opis" class="form-label"></label>
        <textarea asp-for="Opis" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Opis" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
