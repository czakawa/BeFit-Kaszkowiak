@model BeFit_Kaszkowiak.Models.Sesja

@{
    ViewData["Title"] = "Szczegóły sesji";
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-2">Tytuł</dt>
    <dd class="col-sm-10">@Model.Tytul</dd>

    <dt class="col-sm-2">Data</dt>
    <dd class="col-sm-10">@Model.Data.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Opis</dt>
    <dd class="col-sm-10">@Model.Opis</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edytuj</a>
    <a asp-action="Index" class="btn btn-secondary">Powrót</a>
</p>
