@model BeFit_Kaszkowiak.Models.Cwiczenie

@{
    ViewData["Title"] = "Edytuj ćwiczenie";
}

<h1>@ViewData["Title"]</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nazwa" class="form-label"></label>
        <input asp-for="Nazwa" class="form-control" />
        <span asp-validation-for="Nazwa" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TypCwiczeniaId" class="form-label">Typ ćwiczenia</label>
        <select asp-for="TypCwiczeniaId" class="form-select" asp-items="@(ViewData["TypCwiczeniaId"] as SelectList)">
            <option value="">-- Wybierz typ --</option>
        </select>
        <span asp-validation-for="TypCwiczeniaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SesjaId" class="form-label">Sesja</label>
        <select asp-for="SesjaId" class="form-select" asp-items="@(ViewData["SesjaId"] as SelectList)">
            <option value="">-- Wybierz sesję --</option>
        </select>
        <span asp-validation-for="SesjaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CzasTrwaniaSek" class="form-label">Czas trwania (s)</label>
        <input asp-for="CzasTrwaniaSek" class="form-control" type="number" min="0" />
        <span asp-validation-for="CzasTrwaniaSek" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Powtorzenia" class="form-label">Powtórzenia (na serię)</label>
        <input asp-for="Powtorzenia" class="form-control" type="number" min="0" />
        <span asp-validation-for="Powtorzenia" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="IloscSerii" class="form-label">Liczba serii</label>
        <input asp-for="IloscSerii" class="form-control" type="number" min="1" />
        <span asp-validation-for="IloscSerii" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Obciazenie" class="form-label">Obciążenie (kg)</label>
        <input asp-for="Obciazenie" class="form-control" type="number" min="0" step="0.5" />
        <span asp-validation-for="Obciazenie" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Opis" class="form-label">Opis (opcjonalnie)</label>
        <textarea asp-for="Opis" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Opis" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz zmiany</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
