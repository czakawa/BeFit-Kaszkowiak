@model IEnumerable<BeFit_Kaszkowiak.Models.Cwiczenie>

@{
    ViewData["Title"] = "Ćwiczenia";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj ćwiczenie</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Typ</th>
            <th>Sesja</th>
            <th>Czas (s)</th>
            <th>Powtórzenia</th>
            <th>Obciążenie</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr><td colspan="7">Brak ćwiczeń.</td></tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nazwa</td>
                    <td>@(item.TypCwiczenia?.Nazwa ?? "-")</td>
                    <td>@(item.Sesja?.Tytul ?? "-")</td>
                    <td>@item.CzasTrwaniaSek</td>
                    <td>@item.Powtorzenia</td>
                    <td>@(item.Obciazenie.HasValue? item.Obciazenie + " kg" : "—")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Szczegóły</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edytuj</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Usuń</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
